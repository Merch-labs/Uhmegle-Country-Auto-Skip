{
	"manifest_version": 3,
	"name": "Uhmegle Country Auto Skip",
	"version": "1.0.0",
	"description": "Auto-skip users on Uhmegle if their country is not in your allowed list.",
	"icons": {
		"16": "icons/icon16.png",
		"48": "icons/icon48.png",
		"128": "icons/icon128.png"
	},
	"permissions": ["storage", "scripting", "activeTab"],
	"action": {
		"default_popup": "popup.html",
		"default_icon": {
			"16": "icons/icon16.png",
			"48": "icons/icon48.png"
		}
	},
	"host_permissions": ["*://*.uhmegle.com/*", "*://uhmegle.com/*"],
	"content_scripts": [
		{
			"matches": ["*://*.uhmegle.com/*", "*://uhmegle.com/*"],
			"js": ["content.js"],
			"css": ["styles.css"],
			"run_at": "document_idle"
		}
	]
}
